<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <FrameLayout
        android:id="@+id/rl_empty_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_net_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_not_network"
            android:gravity="center"
            android:text="网络异常，点击重试"
            android:textColor="#894141"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/rl_empty_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_empty_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_second"
            android:gravity="center"
            android:text="没有符合条件的数据"
            android:textColor="#894141"
            android:textSize="16sp" />
    </FrameLayout>
    <!--  //进度条(第三方加载动画 Android-SpinKit)http://blog.csdn.net/w6718189/article/details/52758578-->
    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/empty_loading"
        style="@style/SpinKitView.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:visibility="gone"
        app:SpinKit_Color="#a42a2a" />
</FrameLayout>
